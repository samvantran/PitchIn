<%= render 'center' %>

<h1>Check out these opportunities!</h1>
<h3>Which one would you like to participate in?</h3>
<hr class="colored">

<% @matches.each_with_index do |match, idx| %>
  <div class="col-md-4 col-sm-6 wow fadeIn" data-wow-delay=".2s">
    <div class="item">
      <!-- <img src="/public/img/people/<%= idx +1 %>.jpg" class="img-responsive" alt=""> -->
      <div class="caption">
        <h3><%= match.organization.name %></h3>
        <h4><%= match.name %></h4>
        <p><%= match.datetime.strftime("%B %d, %Y") %></p>

        <%= button_to [:final, @volunteer], { :name => :opportunity_id, :value => match.id, :class => "btn btn-outline-dark" } do %>
          Register for <%= match.name %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>

<%= render 'center_close' %>