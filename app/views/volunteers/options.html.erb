
<h1>Check out these opportunities!</h1>
<h3>Which one would you like to participate in?</h3>
<% @matches.each_with_index do |match, idx| %>

  <div class="owl-item" style="width: 380px;">
    <div class="item">
      <!-- <img src="/public/img/people/<%= idx +1 %>.jpg" class="img-responsive" alt=""> -->
      <div class="caption">
        <h3><%= match.name %></h3>
        <hr class="colored">
        <p><%= match.datetime.strftime("%B %d, %Y") %></p>

        <%= button_to [:final, @volunteer], { :name => :opportunity_id, :value => match.id } do %>
          <%= match.name %> on <%= match.datetime.strftime("%B %d, %Y") %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>